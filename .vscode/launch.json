    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "xdebugSettings": {
                "max_data": -1
            },
            "pathMappings": {
                "/opt/apps/sites" : "${workspaceFolder}/Sites",
                "/opt/apps/Packages": "${workspaceFolder}/Packages"
            }
        }
    ]
}